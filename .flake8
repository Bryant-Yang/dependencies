[flake8]
max-line-length = 88
eradicate-aggressive = True
ban-relative-imports = True
exclude =
  .tox
  migrations
per-file-ignores =
  # We're fine to have class attributes with the name `list`.
  *.py: A003
  # Private package should not have module docstrings.  Document
  # dunder methods is also redundant.
  src/_dependencies/*.py: D100, D104, D105, D107
